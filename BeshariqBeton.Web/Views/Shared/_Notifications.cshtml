@if (TempData["Notification"] != null)
{
    <div id="notificationToast" role="alert" class="toast" data-autohide="false" style="position: absolute; top: 2em; right: 2em;">
        <div class="toast-header">
            <strong class="mr-auto">Bildirishnoma</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">@Html.Raw(TempData["Notification"])</div>
    </div>

    <script>
        $(function () {
            $('#notificationToast').toast('show');
        });
    </script>
}